---
import BaseLayout from "../layouts/BaseLayout.astro"
import FullCTA from "../components/FullCTA.astro";
import { getCollection } from "astro:content";
import HeadingPrimary from "../components/headings/HeadingPrimary.astro";
import ToolsGroup from "../components/tools/ToolsGroup.astro";

const title = "Fitness Tools & Calculators | Adir Avraham";
const description = "Explore the Adir Avraham Fitness Tools Page for a range of calculators to help you monitor your fitness progress. Use our body fat calculator, BMI calculator, 1RM calculator, and more to achieve your fitness goals.";
const heading = "Fitness Tools & Calculators";

const tools = await getCollection('tools');
---

<BaseLayout title={title} description={description}>
    
    <div class="container mx-auto text-center">
        <HeadingPrimary text={heading} />
    </div>
    
    <section class="container mx-auto text-center">
        <ToolsGroup posts={tools} />
    </section>
   
    <FullCTA />

</BaseLayout>
