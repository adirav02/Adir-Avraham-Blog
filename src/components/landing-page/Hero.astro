---
import { Image } from 'astro:assets';
import HeadingPrimary from "../headings/HeadingPrimary.astro";
import HeroDescription from "../text/HeroDescription.astro";
import HeroCTAForm from '../forms/HeroCTAForm.tsx';

import circledLogoBlue from '../../assets/images/circledLogoBlue.png';

const heroDescription = `Welcome to my corner of the web! Dive into a world where health, fitness, and personal growth converge. Here, you'll find a treasure trove of insights and tips designed to help you unlock your potential and lead a vibrant, balanced life.`;
const heroCTAText = "Join my newsletter to receive weekly updates filled with actionable fitness hacks, health tips, and inspiration to keep you on track towards your goals.";
const headingText = "Hi, I'm Adir Avraham"
---


<section class="pt-6 pb-16 bg-white sm:pt-12 sm:pb-24">
        <div class="container mx-auto px-8 grid grid-cols-1 items-center gap-16 lg:px-20 lg:grid-cols-2 xl:gap-12 2xl:px-8 2xl:gap-24">
          <div class="text-center lg:text-start">
            <HeadingPrimary text={headingText}/>
            <!-- TODO: Write clear despcription -->
            <HeroDescription text={heroDescription}/>
            <!-- CTA -->
            <HeroDescription text={heroCTAText}/>
            
            <HeroCTAForm client:load/>
          </div>

          <div>
            <!-- TODO: Change Image -->
            <Image src={circledLogoBlue} alt='A picture of me' class:list={"mx-auto w-4/5 sm:w-3/5 lg:w-full lg:max-h-1/2"}/>
          </div>
        </div>
</section>
