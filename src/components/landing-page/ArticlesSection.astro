---
import FeaturedArticles from "../articles/FeaturedArticles.astro";
import HeadingSecondary from "../headings/HeadingSecondary.astro";
import HeadingTertiary from "../headings/HeadingTertiary.astro";
import LatestArticle from "../articles/LastestArticle.astro";
import ButtonOutline from "../ButtonOutline.astro";
import { getEntry } from "astro:content";
import HeroDescription from "../text/HeroDescription.astro";


const mainHeading = "A Glimpse into My Thoughts";
const tertialyHeading = "Articles";
const articlesDescription="Discover articles that blend the best of fitness, personal development, and wellness. Each piece is a snapshot of my journey â€“ filled with experimentation, exploration, and practical advice. Whether you're looking to optimize your health, find motivation, or explore new ways to stay fit, there's something here for you.";

const btnOutlineText = "All Articles";
const articlesPageURL = "/articles/";

const latestArticle = await getEntry('posts','is-all-this-cardio-really-necessary-for-fat-loss');
---

  <section class="py-24">
        
    <div class="container mx-auto text-center">
          <HeadingSecondary text={mainHeading}/>          
        </div>

        <div class="container mx-auto px-8 mb-24 grid grid-cols-1 text-center  gap-x-16 gap-y-24 items-start md:grid-cols-2 md:text-start ">
          
          <LatestArticle post={latestArticle}/>

          <div class="flex flex-col justify-between xl:w-3/4">
            <HeadingTertiary text={tertialyHeading}/>
            <HeroDescription text={articlesDescription} additionalClasses={"mb-5"}/>
            <div class="self-center  mt-8 md:mt-5 md:self-start">
              <ButtonOutline text={btnOutlineText} link={true} url={articlesPageURL}/>
            </div>
          </div>
        </div>

          <FeaturedArticles/>

      </section>