---
import { Image } from 'astro:assets';
import circledLogoBlue from '../images/circledLogoBlue.png';
import Disclamer from './Disclamer.astro';
import FooterNavItem from './navigation/FooterNavItem.astro';
---


<footer class="pt-32 pb-6 text-center border-t border-solid border-slate-200 ">
    <!-- Bottom Navigation -->
    <div class="container mx-auto grid grid-rows-2 gap-y-6 sm:grid-cols-2 sm:grid-rows-1 sm:gap-y-0">
        <div class=" justify-self-center">
          <a href="#" class="block mb-8 sm:mb-0">
            <Image src={circledLogoBlue} alt='Adir Avraham Logo' height={80} width={80}/>
          </a>
        </div>

        <nav class="nav-col">
          <ul class="footer-nav">
            <FooterNavItem name="Articles" url="/articles/"/>
            <FooterNavItem name="Tools" url="/tools/"/>
          </ul>
        </nav>
    </div>
    <Disclamer/>
</footer>
