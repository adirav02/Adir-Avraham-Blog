---
import { Image } from 'astro:assets';
import HeadingPrimary from "../headings/HeadingPrimary.astro";
import Paragraph from '../Paragraph.astro';

const {headline, description, image="../../images/circledLogoBlue.png", imageAlt="Logo"} = Astro.props; 
---


<section class="pt-6 pb-16 bg-white sm:pt-12 sm:pb-24">
        <div class="container mx-auto px-8 grid grid-cols-1 items-center gap-16 lg:px-20 lg:grid-cols-2 xl:gap-12 2xl:px-8 2xl:gap-24">
          <div class="text-center lg:text-start">
            <HeadingPrimary text={headline}/>
            <Paragraph text={description}/>            
          </div>

          <div>
            <Image src={image} alt={imageAlt} class:list={"mx-auto w-4/5 sm:w-3/5 lg:w-full lg:max-h-1/2"}/>
          </div>
        </div>
</section>
